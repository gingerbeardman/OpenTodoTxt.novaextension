{
    "identifier": "com.gingerbeardman.OpenTodoTxt",
    "name": "Open todo.txt",
    "organization": "gingerbeardman",
    "description": "Opens the current project's todo.txt and/or done.txt files in an app of your choice.",
    "repository": "https://github.com/gingerbeardman/OpenTodoTxt.novaextension",
    "bugs": "https://github.com/gingerbeardman/OpenTodoTxt.novaextension/issues",
    "license": "MIT",
    "version": "1.0",
    "categories": ["commands"],
    
    "main": "main.js",
    
    "entitlements": {
        "process": true,
    },
    
    "commands": {
        "editor": [
            {
                "title": "Open todo.txt & done.txt",
                "command": "todo.openBoth"
            },
            {
                "title": "Open todo.txt",
                "command": "todo.openTodo"
            },
            {
                "title": "Open done.txt",
                "command": "todo.openDone"
            }
        ]
    },
    
    "config": [
        {
            "key": "todo.app",
            "title": "Open with",
            "type": "path",
            "default": "/Applications/Nova.app"
        }
    ]
}
